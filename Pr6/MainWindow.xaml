<Window x:Class="Pr6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr6"
        mc:Ignorable="d"
        Title="Регистрация нового пользователя" Height="570" Width="500">
    <DockPanel LastChildFill="False">
        <!--Меню сверху-->
        <DockPanel DockPanel.Dock="Top" 
                   Background="AliceBlue" 
                   Height="Auto"
                   LastChildFill="False" >

            <Button Content="Главная" Margin="5" Width="100"></Button>
            <Button Content="Профиль" Margin="5" Width="100"></Button>
            <Button Content="Настройки" Margin="5" Width="100"></Button>
            <Button Content="Помощь" Margin="5" Width="100"></Button>

        </DockPanel>

        <!--Основная панель-->
        <Grid DockPanel.Dock="Top"  Margin="10 10 10 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel LastChildFill="False" Grid.Row="0" Grid.Column="1" Margin="5 5 0 5" VerticalAlignment="Center">
                <TextBlock Text="ФИО:"  DockPanel.Dock="Left" />
                <TextBox DockPanel.Dock="Right" Width="230" />
            </DockPanel>

            <DockPanel LastChildFill="False" Grid.Row="1" Grid.Column="1" Margin="5 5 0 5" VerticalAlignment="Center">
                <TextBlock Text="Email:"  DockPanel.Dock="Left" />
                <TextBox DockPanel.Dock="Right" Width="230" />
            </DockPanel>

            <DockPanel LastChildFill="False" Grid.Row="2" Grid.Column="1" Margin="5 5 0 5" VerticalAlignment="Center">
                <TextBlock Text="Телефон:"  DockPanel.Dock="Left" />
                <TextBox DockPanel.Dock="Right" Width="230" />
            </DockPanel>

            <DockPanel LastChildFill="False" Grid.Row="3" Grid.Column="1" Margin="5 5 0 5" VerticalAlignment="Center">
                <TextBlock Text="Дата рождения:"  DockPanel.Dock="Left" VerticalAlignment="Center"/>
                <DatePicker DockPanel.Dock="Right" Width="230" />
            </DockPanel>

            <DockPanel LastChildFill="False" Grid.Row="4" Grid.Column="1" Margin="5 0 0 0" VerticalAlignment="Center">
                <TextBlock Text="Пол:"  DockPanel.Dock="Left" />
                <StackPanel DockPanel.Dock="Right" Width="230" Orientation="Horizontal">
                    <RadioButton Content="Мужской" Margin="0 0 12 0"/>
                    <RadioButton Content="Женский"/>
                </StackPanel>
            </DockPanel>

            <DockPanel LastChildFill="False" Grid.Row="5" Grid.Column="1" Margin="5 5 0 5" VerticalAlignment="Center">
                <TextBlock Text="Пароль:"  DockPanel.Dock="Left" />
                <TextBox DockPanel.Dock="Right" Width="230" />
            </DockPanel>

            <DockPanel LastChildFill="False" Grid.Row="6" Grid.Column="1" Margin="5 5 0 5" VerticalAlignment="Center">
                <TextBlock Text="Повторите пароль:"  DockPanel.Dock="Left" />
                <TextBox DockPanel.Dock="Right" Width="210" />
            </DockPanel>

            <Border BorderBrush="LightGray" BorderThickness="0.5" Grid.RowSpan="6" Grid.Column="0">
                <StackPanel   Orientation="Vertical"  >
                    <Image Height="170" Width="Auto"/>
                    <Button Content="Загрузить фото" Height="20" DockPanel.Dock="Bottom" Margin="10"/>
                </StackPanel>
            </Border>
            


            <WrapPanel Grid.ColumnSpan="2" Grid.Row="7" Background="LightGray" Margin="0 10 0 10" Height="150">
                <TextBlock Text="*Пароль должен содержать минимум 8 символов" Margin="10"/>
                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Text="*Email должен быть в формате name@mail.com" Margin="0 0 10 0"/>
                    <TextBlock Text="*Все поля обязательны"/>
                </StackPanel>
            </WrapPanel>


            <StackPanel Grid.Column="1" Grid.Row="8" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 10 10 10">
                <Button Content="Зарегистрироваться" Height="20" Margin="0 0 15 0" Width="140"/>
                <Button Content="Отмена" Height="20" Width="90"/>
            </StackPanel>

        </Grid>

        <DockPanel DockPanel.Dock="Bottom" Background="LightGray">
            <TextBlock Text="Готово" Margin="5"/>
        </DockPanel>

        

    </DockPanel>
</Window>
